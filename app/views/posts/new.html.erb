<div class="weight-bold-text">
        
          <span class="indispensable">今回の旅行先</span>
        </div>
        <%= f.collection_select(:province_id, Province.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
        <div class="sell-btn-contents">
      <%= f.submit "Post" ,class:"sell-btn" %>
    </div>
  </div>
  <% end %>
</div>
 <%= link_to "メインページに戻る", root_path, class: 'btn'%>
