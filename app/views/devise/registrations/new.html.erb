<div class="registration__new__full">

<div class="video__area">
<%= video_tag("/videos/48873.mp4", autoplay: :true, loop: :true, muted: :true,class:"video") %>
</div>

<div class="registration__new__left">
<div class="registration__input__area">
<div class="registration__input__area__inner">
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', id:"new_user__create",local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="registration__nickname__area">
    <div class='form-text-wrap'>
     Nickname <br> 
    <%= f.text_area :nickname, class:"input-default", id:"nickname", maxlength:"20" %>
     <div id="new_user_image"></div>
    </div>
  </div>

  <div class="registration__email__field">
    <%= f.label :email %><br/>
    <%= f.email_field :email,class:"email__filed", autofocus: true, autocomplete: "email" %>
  </div>

   <%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
 <% else %>
   <div class="field">
     <%= f.label :password %>
     <% @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
     <br />
     <%= f.password_field :password, autocomplete: "new-password" %>
   </div>

   <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
 <% end %>

  <div class="registration__password__name">
  <div class="password__label">
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:" 6 minimum",class:"password__name" %>
    </div>
    <div class="password__area">
    <%= f.label :Confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"confirmation__name" %>
    </div>
  </div>

  <div class="registration__password__name">     
   <div class="password__label">
   <%= f.label :name %><br>
   <%= f.text_area :last_name, class:"password__name", id:"last-name", placeholder:" ex) Yamada" %>
    </div>
    <div class='password__area'>
     <%= f.label :name %><br>
      <%= f.text_area :first_name, class:"confirmation__name", id:"first-name", placeholder:" ex) Taro" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Profile</label>
    </div>
    <%= f.text_area :profile, class:"profile__input", placeholder:
"200文字で自己紹介
■■ おすすめの旅行先

■■ 今後行きたい旅

■■ tabiiiの仲間へひとこと!!", maxlength:"200" %>
  </div>

  <div class="icon__area">
   <%= f.file_field :profile_image, id:"item-image" %>
  </div>

  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  
<% end %>

<div class="registration__select">
<div class="google__icon__area">
<%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do%>
<%= image_tag 'googleicon.png', class:"google__icon"%>
<% end %>
</div>
<div class="registration__right">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
<div class="registration__new__right">
<div class="registration__title__area">
<div class="registration__title">Tabiii</div>
</div>
</div>